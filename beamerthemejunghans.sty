\ProvidesPackage{beamerthemejunghans}[2014/03/01]
\usepackage{ifsym}

\useinnertheme{rectangles}
\useoutertheme[right,width=2.3cm,height=0pt]{sidebar}
\usefonttheme{junghans}
\usecolortheme{junghans}
\setbeamercovered{transparent}

\newcommand{\jug@frameofframes}{/}
\newcommand{\setframeofframes}[1]{\renewcommand{\jug@frameofframes}{#1}}

\addtobeamertemplate{sidebar \beamer@sidebarside}{}
{
\begin{beamercolorbox}[wd=\the\beamer@sidebarwidth]{institute in sidebar}
\usebeamerfont{institute in sidebar}\hspace*{2mm}\insertshortinstitute
\\*[0pt]
\end{beamercolorbox}
\begin{beamercolorbox}[ht=1px]{upper separation line foot}
\end{beamercolorbox}
\begin{beamercolorbox}[wd=\the\beamer@sidebarwidth]{page number in sidebar}
\usebeamerfont{page number in sidebar}
\centering
\insertframenumber~\jug@frameofframes~\inserttotalframenumber
\\*[0pt]
\end{beamercolorbox}
\begin{beamercolorbox}[ht=1px]{lower separation line foot}
\end{beamercolorbox}
}


\setbeamertemplate{navigation symbols}{} %keine Navigationssymbole

\addtobeamertemplate{background canvas}{\transfade[duration=.5]}{} %Übergangseffekt
